{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://qud.itqan.community/schemas/layer-03-word-structure.json",
  "title": "Layer 3: Word Structure",
  "description": "Word boundaries and morphological composition",
  "type": "object",
  "required": [
    "word_id",
    "verse_ref",
    "word_position",
    "character_refs"
  ],
  "properties": {
    "word_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this word instance"
    },
    "verse_ref": {
      "type": "string",
      "format": "uuid",
      "description": "Foreign key to Layer 5 (Verse)"
    },
    "word_position": {
      "type": "integer",
      "minimum": 0,
      "description": "Word index in verse (0-indexed)"
    },
    "character_range": {
      "type": "array",
      "items": { "type": "integer" },
      "minItems": 2,
      "maxItems": 2,
      "description": "[start_pos, end_pos] referencing Layer 0 character positions"
    },
    "character_refs": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uuid"
      },
      "minItems": 1,
      "description": "UUIDs of Layer 0 characters composing this word"
    },
    "morphology": {
      "type": "object",
      "properties": {
        "root": {
          "type": "string",
          "pattern": "^[\u0600-\u06FF]+$",
          "description": "Arabic root letters"
        },
        "pattern": {
          "type": "string",
          "description": "Morphological pattern (وزن)"
        },
        "affixes": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Prefixes and suffixes"
        }
      },
      "description": "Morphological analysis (if available)"
    },
    "word_count_contribution": {
      "type": "integer",
      "minimum": 0,
      "maximum": 1,
      "default": 1,
      "description": "Usually 1, may be 0 for aya marks"
    },
    "word_type": {
      "type": "string",
      "enum": ["noun", "verb", "particle", "pronoun", "preposition", "conjunction", "aya_mark", "other"],
      "description": "Part of speech classification"
    },
    "cross_layer_mappings": {
      "type": "object",
      "properties": {
        "layer_0_characters": {
          "type": "array",
          "items": { "type": "string", "format": "uuid" },
          "description": "UUIDs of constituent characters (N:1)"
        },
        "layer_1_symbols": {
          "type": "array",
          "items": { "type": "string", "format": "uuid" },
          "description": "UUIDs of symbols for rendering"
        },
        "layer_2_pairs": {
          "type": "array",
          "items": { "type": "string", "format": "uuid" },
          "description": "UUIDs of intra-word tajweed pairs"
        },
        "layer_4_sentence": {
          "type": "string",
          "format": "uuid",
          "description": "UUID of sentence containing this word (N:1)"
        },
        "layer_5_verse": {
          "type": "string",
          "format": "uuid",
          "description": "UUID of verse containing this word (N:1)"
        }
      }
    }
  },
  "additionalProperties": false
}
