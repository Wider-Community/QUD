{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://qud.itqan.community/schemas/qir-qiraat-structure.json",
  "title": "QIR: Qiraat Structure",
  "description": "Foundational metadata for Qiraat systems and narrations (القراءات العشر)",
  "version": "1.0.0",
  "layer_code": "QIR",
  "type": "object",
  "required": [
    "narration_id",
    "reader_name_ar",
    "reader_name_en",
    "narrator_name_ar",
    "narrator_name_en",
    "full_name",
    "canonical_category"
  ],
  "properties": {
    "narration_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this narration"
    },
    "reader_name_ar": {
      "type": "string",
      "pattern": "^[\\u0600-\\u06FF\\s]+$",
      "description": "Reader (narrator) name in Arabic (e.g., حفص)"
    },
    "reader_name_en": {
      "type": "string",
      "description": "Reader (narrator) name transliterated (e.g., Hafs)"
    },
    "narrator_name_ar": {
      "type": "string",
      "pattern": "^[\\u0600-\\u06FF\\s]+$",
      "description": "Imam (Qari) name in Arabic (e.g., عاصم)"
    },
    "narrator_name_en": {
      "type": "string",
      "description": "Imam (Qari) transliterated (e.g., Asim)"
    },
    "full_name": {
      "type": "string",
      "description": "Combined narration (e.g., 'حفص عن عاصم' / 'Hafs 'an 'Asim')"
    },
    "qiraah_rules": {
      "type": "object",
      "description": "Tajweed rules specific to this narration",
      "properties": {
        "idgham_rules": {
          "type": "array",
          "items": { "type": "string" }
        },
        "madd_rules": {
          "type": "array",
          "items": { "type": "string" }
        },
        "pronunciation_variants": {
          "type": "object"
        },
        "pause_rules": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "canonical_category": {
      "type": "string",
      "enum": [
        "nafi",
        "ibn_kathir",
        "abu_amr",
        "ibn_amir",
        "asim",
        "hamzah",
        "al_kisai",
        "abu_jafar",
        "yaqub",
        "khalaf"
      ],
      "description": "Primary Imam associated with the narration"
    },
    "source_authority": {
      "type": "string",
      "description": "Reference to isnad chain/scholarly source"
    },
    "reader_ref": {
      "type": "string",
      "format": "uuid",
      "description": "Foreign key to RDR (Readers & Narrators)"
    },
    "narrator_lineage": {
      "type": "array",
      "description": "Ordered chain of transmission (isnad) for this narration",
      "items": {
        "type": "string",
        "format": "uuid"
      }
    },
    "transmission_confidence": {
      "type": "object",
      "description": "Scholarly confidence level of the transmission chain",
      "properties": {
        "level": {
          "type": "string",
          "enum": ["mutawatir", "mashhur", "ahad"]
        },
        "notes": {
          "type": "string",
          "description": "Scholarly notes regarding the transmission strength"
        }
      }
    },
    "audio_examples": {
      "type": "array",
      "description": "Links to audio recitations of this narration",
      "items": {
        "type": "string",
        "format": "uri"
      }
    },
    "regional_usage": {
      "type": "array",
      "description": "Regions where this narration is commonly used",
      "items": {
        "type": "string"
      }
    },
    "preferred_educational_usage": {
      "type": "boolean",
      "description": "Indicates if this narration is recommended for educational purposes"
    }
  },
  "additionalProperties": false
}
