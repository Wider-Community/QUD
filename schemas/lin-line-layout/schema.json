{
  "$id": "https://qud.wider-community.org/schemas/lin-line-layout/schema.json",
  "type": "object",
  "required": ["line_id", "page_ref", "line_index", "line_type", "first_word_ref", "last_word_ref"],
  "properties": {
    "line_id": { "type": "string", "description": "Unique ID for the line." },
    "page_ref": { "type": "string", "description": "Reference to the parent page." },
    "line_index": { "type": "integer", "description": "Line number on the page." },
    "line_type": { "enum": ["verse_text", "surah_header", "basmala"] },
    "start_verse_ref": { "type": "string", "description": "Reference to the first verse in this line." },
    "first_word_ref": { "type": "string", "description": "ID of the first word." },
    "last_word_ref": { "type": "string", "description": "ID of the last word." },
    "structural_features": {
      "type": "object",
      "properties": {
        "is_indented": { "type": "boolean", "default": false },
        "has_sajda": { "type": "boolean", "default": false }
      }
    }
  }
}
