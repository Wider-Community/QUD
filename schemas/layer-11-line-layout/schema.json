{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://qud.itqan.community/schemas/layer-11-line-layout.json",
  "title": "Layer 11: Line Layout",
  "description": "Line-level composition and line breaks",
  "type": "object",
  "required": ["line_id", "page_ref", "line_number", "start_verse_ref", "end_verse_ref"],
  "properties": {
    "line_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this line"
    },
    "page_ref": {
      "type": "string",
      "format": "uuid",
      "description": "Foreign key to Layer 10 (Page UUID)"
    },
    "line_number": {
      "type": "integer",
      "minimum": 1,
      "maximum": 20,
      "description": "Line number on page (1-15 typically)"
    },
    "start_verse_ref": {
      "type": "string",
      "format": "uuid",
      "description": "Foreign key to Layer 5 (Verse UUID)"
    },
    "end_verse_ref": {
      "type": "string",
      "format": "uuid",
      "description": "Foreign key to Layer 5 (Verse UUID)"
    },
    "start_character_ref": {
      "type": "string",
      "format": "uuid",
      "description": "Foreign key to Layer 0 (Character UUID - if line starts mid-verse)"
    },
    "end_character_ref": {
      "type": "string",
      "format": "uuid",
      "description": "Foreign key to Layer 0 (Character UUID - if line ends mid-verse)"
    },
    "cross_layer_mappings": {
      "type": "object",
      "properties": {
        "layer_10_page": {
          "type": "string",
          "format": "uuid",
          "description": "Parent page UUID (N:1)"
        },
        "layer_5_verses": {
          "type": "array",
          "items": { "type": "string", "format": "uuid" },
          "description": "Verses on this line"
        },
        "layer_0_characters": {
          "type": "array",
          "items": { "type": "string", "format": "uuid" },
          "description": "Character UUIDs for mid-verse breaks"
        }
      }
    }
  },
  "additionalProperties": false
}
