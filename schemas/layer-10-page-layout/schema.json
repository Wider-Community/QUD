{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://qud.itqan.community/schemas/layer-10-page-layout.json",
  "title": "Layer 10: Page Layout",
  "description": "Page-level composition and pagination",
  "type": "object",
  "required": ["page_id", "mushaf_ref", "page_number", "start_verse_ref", "end_verse_ref"],
  "properties": {
    "page_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this page"
    },
    "mushaf_ref": {
      "type": "string",
      "format": "uuid",
      "description": "Foreign key to Layer 8 (Mushaf)"
    },
    "page_number": {
      "type": "integer",
      "minimum": 1,
      "description": "Page number in mushaf"
    },
    "start_verse_ref": {
      "type": "string",
      "format": "uuid",
      "description": "Foreign key to Layer 5 (Verse UUID)"
    },
    "end_verse_ref": {
      "type": "string",
      "format": "uuid",
      "description": "Foreign key to Layer 5 (Verse UUID)"
    },
    "start_character_ref": {
      "type": "string",
      "format": "uuid",
      "description": "Foreign key to Layer 0 (Character UUID - if page starts mid-verse)"
    },
    "end_character_ref": {
      "type": "string",
      "format": "uuid",
      "description": "Foreign key to Layer 0 (Character UUID - if page ends mid-verse)"
    },
    "line_count": {
      "type": "integer",
      "minimum": 1,
      "default": 15,
      "description": "Lines per page (typically 15)"
    },
    "cross_layer_mappings": {
      "type": "object",
      "properties": {
        "layer_8_mushaf": {
          "type": "string",
          "format": "uuid"
        },
        "layer_5_verses": {
          "type": "array",
          "items": { "type": "string", "format": "uuid" },
          "description": "All verses on this page"
        },
        "layer_11_lines": {
          "type": "array",
          "items": { "type": "string", "format": "uuid" },
          "description": "All lines on this page (1:N)"
        }
      }
    }
  },
  "additionalProperties": false
}
